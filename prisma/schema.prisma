generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
}

model User {
    id         String     @id @default(uuid())
    name       String?
    email      String     @unique
    role       Role?
    bookings   Booking[]
    businesses Business[] @relation("UserBusinesses")
}

model Business {
    id       String    @id @default(uuid())
    name     String    @unique
    hours    Json
    ownerId  String
    owner    User      @relation("UserBusinesses", fields: [ownerId], references: [id])
    services Service[]

    @@unique([ownerId, name])
}

model Service {
    id         String    @id @default(uuid())
    name       String    @unique
    duration   Int
    price      Float
    businessId String
    business   Business  @relation(fields: [businessId], references: [id])
    bookings   Booking[]

    @@unique([businessId, name])
}

model Booking {
    id        String        @id @default(uuid())
    date      DateTime
    status    BookingStatus @default(PENDING)
    userId    String?
    user      User?         @relation(fields: [userId], references: [id])
    serviceId String
    service   Service       @relation(fields: [serviceId], references: [id])
    createdAt DateTime      @default(now())

    @@unique([serviceId, date])
}

enum Role {
    CUSTOMER
    BUSINESS
    ADMIN
}

enum BookingStatus {
    PENDING
    CONFIRMED
    CANCELLED
    COMPLETED
}
